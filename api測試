2.

//直接下單
http://localhost:8080/orders/direct

 {
   "userId": 1,
   "items": [
     {
       "productId": 2,
       "quantity": 1
     },
     {
       "productId": 3,
       "quantity": 2
     }
   ],
   "shippingAddress": "台北市信義區"
 }


